{
    // WARNING: The args overwrite the hydra config from ../config/config.yaml.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            // "program": "${file}",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "args": [
                "run_type=release",
                "host=gin",
                "device=cuda",
                "log_to_wandb=false",
                "multi_gpu=false",
                "checkpoint=null",
                "run_type.logging=DEBUG"
                // "experiment_name=debug"
            ],
            "justMyCode": false
        },
        {
            "name": "predict",
            "type": "debugpy",
            "request": "launch",
            // "program": "${file}",
            "program": "${workspaceFolder}/scripts/predict.py",
            "console": "integratedTerminal",
            "args": [
                "run_type=debug",
                "host=gin",
                "device=cuda",
                "log_to_wandb=false",
                "multi_gpu=false",
            ],
            "justMyCode": false
        },
        {
            "name": "evaluate",
            "type": "debugpy",
            "request": "launch",
            // "program": "${file}",
            "program": "${workspaceFolder}/scripts/evaluate.py",
            "console": "integratedTerminal",
            "args": [
                "run_type=debug",
                "host=gin",
                "device=cuda",
                "log_to_wandb=false",
                "multi_gpu=false",
            ],
            "justMyCode": false
        }
    ]
}