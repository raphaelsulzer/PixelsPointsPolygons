{
    // WARNING: The args overwrite the hydra config from ../config/config.yaml.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "args": [
                "run_type=debug",
                "host=gin",
                "device=cuda",
                "log_to_wandb=false",
                "multi_gpu=false",
                "checkpoint=null",
                "experiment_name=debug",
                // "model=ffl",
                // "use_lidar=true",
                // "use_images=false",
                // "model.batch_size=4"
            ],
            "justMyCode": false,
            "env": {
                "CUDA_LAUNCH_BLOCKING": "1",
                "TORCH_USE_CUDA_DSA": "1",
                // "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "predict",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/predict.py",
            "console": "integratedTerminal",
            "args": [
                "run_type=debug",
                "host=gin",
                "device=cuda",
                "log_to_wandb=false",
                "multi_gpu=false",
                // "checkpoint=validation_best",
                // "experiment_name=inria_trained",
                // "checkpoint_file=/data/rsulzer/ffl_outputs/checkpoint.best_val.epoch_000234.tar"
            ],
            "justMyCode": false
        },
        {
            "name": "evaluate",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/evaluate.py",
            "console": "integratedTerminal",
            "args": [
                "run_type=debug",
                "host=gin",
                "device=cuda",
                "log_to_wandb=false",
                "multi_gpu=false",
            ],
            "justMyCode": false
        },
        {
            "name": "preprocess_ffl",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data_preprocess/ffl/preprocess_ffl.py",
            "console": "integratedTerminal",
            "args": [
                "run_type=release",
                "host=gin",
                "device=cuda",
                "log_to_wandb=false",
                "multi_gpu=false",
            ],
            "justMyCode": false
        },
        {
            "name": "current_file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "run_type=debug",
            ],
            "justMyCode": false
        }
    ]
}