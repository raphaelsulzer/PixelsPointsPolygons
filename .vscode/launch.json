{
    // WARNING: The args overwrite the hydra config from ../config/config.yaml.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            // "program": "${file}",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "args": [
                "run_type=debug",
                "host=g5k",
                "device=cpu",
                "log_to_wandb=false",
                "multi_gpu=false",
            ],
            "justMyCode": false
        }
    ]
}