{
    // WARNING: The args overwrite the hydra config from ../config/config.yaml.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "args": [
                "run_type=debug",
                "host=gin",
                "device=cuda",
                "log_to_wandb=false",
                "multi_gpu=false",
                // "checkpoint=null",
                // "experiment_name=debug",
                // "run_type.num_workers=4"
                // "model=ffl",
                // "use_lidar=true",
                // "use_images=false",
                // "model.batch_size=4"
            ],
            "justMyCode": false,
            "env": {
                "CUDA_LAUNCH_BLOCKING": "1",
                "TORCH_USE_CUDA_DSA": "1",
                // "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "predict",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/predict.py",
            "console": "integratedTerminal",
            "args": [
                "run_type=release",
                "host=gin",
                "device=cuda",
                "log_to_wandb=false",
                "multi_gpu=false",
                "polygonization.method=[acm]",
                "checkpoint=validation_best",
                "experiment_name=v3_lidar_pp_vit_cnn_bs2x16",
                // "experiment_name=image_vit_cnn_bs2x16",
                "model=ffl",
                "encoder=pointpillars_vit_cnn"
            ],
            "justMyCode": false,
            "env": {
                "CUDA_LAUNCH_BLOCKING": "1",
                "TORCH_USE_CUDA_DSA": "1",
                // "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "predict_demo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/predict_demo.py",
            "console": "integratedTerminal",
            "args": [
                "run_type=debug",
                "host=gin",
                "device=cuda",
                "log_to_wandb=false",
                "multi_gpu=false"
            ],
            "justMyCode": false
        },
        {
            "name": "evaluate",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/evaluate.py",
            "console": "integratedTerminal",
            "args": [
                "run_type=debug",
                "host=gin",
                "device=cuda",
                "log_to_wandb=false",
                "multi_gpu=false",
            ],
            "justMyCode": false
        },
        {
            "name": "preprocess_ffl",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data_preprocess/ffl/preprocess_ffl.py",
            "console": "integratedTerminal",
            "args": [
                // "run_type=release",
                "run_type=debug",
                "host=gin",
                "device=cuda",
                "log_to_wandb=false",
                "multi_gpu=false",
                "encoder=pointpillars_vit" // setting an encoder here, simply to load the 224x224 dataset version
            ],
            "justMyCode": false
        },
        {
            "name": "current_file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "run_type=debug",
            ],
            "justMyCode": false
        }
    ]
}